---
layout: base.njk
---
{% include 'sitenav.njk' %}
<header class="tdbc-hero tdbc-background--texture tdbc-background--primary">
  <div class="tdbc-content-maxlength">
    <h1>{{ title }}</h1>
    <small class="tdbc-meta"><em>Posted on</em>: {{ page.date | postDate }} <em>by</em> Stephanie Eckles<br>{{ content | emojiReadTime }}</small>
    {%- if description %}
    <p class="tdbc-lead tdbc-text-align--left">{{ description }}</p>
    {% endif -%}
  </div>
</header>
<main id="main" class="tdbc-container">
  <article class="tdbc-mx-auto">
    {{ content | safe }}
  </article>
</main>
